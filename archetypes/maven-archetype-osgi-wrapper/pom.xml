  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ops4j.pax.construct</groupId>
  <artifactId>maven-archetype-osgi-wrapper</artifactId>

  <name>OPS4J - Archetype: OSGi wrapper for third-party jar(s)</name>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>../maven-archetype-osgi-project/src/main/resources/archetype-resources/poms</directory>
        <targetPath>archetype-resources/target/settings</targetPath>
        <includes>
          <include>wrappers/pom.xml</include>
          <include>pom.xml</include>
        </includes>
      </resource>
    </resources>
  </build>

</project>
