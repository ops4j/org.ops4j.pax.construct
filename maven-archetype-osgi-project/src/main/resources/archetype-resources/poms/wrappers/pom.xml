<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>${package}.build</groupId>
    <artifactId>shared-plugin-settings</artifactId>
    <version>${version}</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wrapper-bundle-settings</artifactId>

  <name>${artifactId} - wrapper instructions</name>
#literal()

  <!--
    don't apply project details to wrapped jars
  -->
  <organization/>
  <description>
    Simple OSGi wrapper around third-party jar(s)
  </description>
  <licenses>
    <license/>
  </licenses>

  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <!--
          the following instructions are optimized for wrapping general-purpose libraries as OSGi bundles
        -->
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${bundle.symbolicName}</Bundle-SymbolicName>
            <Bundle-Version>${wrapped.version}</Bundle-Version>
            <!--
              export wrapped contents: don't use Export-Package:* as this bundles everything on the classpath
            -->
            <_exportcontents>*</_exportcontents>
            <Private-Package>!*</Private-Package>
            <!--
              inline main artifact and embed all compile and runtime dependencies (except poms and OSGi framework artifacts)
            -->
            <Embed-Dependency>
              ${wrapped.artifactId};groupId=${wrapped.groupId};inline=true,
              *;scope=compile|runtime;groupId=!org.osgi;type=!pom
            </Embed-Dependency>
            <!--
              each module can override these defaults in their osgi.bnd file
            -->
            <_include>-osgi.bnd</_include>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

#end
</project>
